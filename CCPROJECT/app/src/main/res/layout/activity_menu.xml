<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Activities.Menu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/logo_cc" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">


            <TextView
                style="@style/LabelText"
                android:gravity="center"
                android:text="Login"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/button_inicio"
                android:id="@+id/tLogin"
                android:textColor="#292727"
                style="@style/EditText"
                android:hint="E-mail"
                android:drawableLeft="@drawable/ic_person_black"
                />

            <TextView
                style="@style/LabelText"
                android:gravity="center"
                android:text="Senha"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/button_inicio"
                android:id="@+id/tSenha"
                style="@style/EditText"
                android:textColor="#292727"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >


                <Button
                    android:id="@+id/esqueci_senha"
                    style="@style/EditText"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"

                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left"
                    android:text="Esqueceu a senha?" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent" />


                <Button
                    android:id="@+id/reg_novo"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Registre-se" />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btLogin"

            android:layout_width="150dp"

            android:layout_height="50dp"
            android:background="@drawable/button_inicio"
            android:text="Logar"

            />

        <ProgressBar
            android:id="@+id/login_progrss"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />





    </LinearLayout>



</LinearLayout>