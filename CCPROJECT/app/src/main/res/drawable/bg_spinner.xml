<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >



    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/> <!-- cor do sÃ³lido -->
            <corners android:radius="12dp"/> <!-- valor do arredondamento das bordas -->
            <stroke android:color="#eee" android:width="2dp"/> <!-- cor da borda e tamanho dela -->
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp"/>
        </shape>
    </item>
    <!-- cor da borda -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- cor de fundo, tamanho somente da borda inferior -->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>



